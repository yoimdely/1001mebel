---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/ui/Section.astro";
import Hero from "../components/ui/Hero.astro";
import Grid from "../components/ui/Grid.astro";
import Button from "../components/ui/Button.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import CTAFormShort from "../components/CTAFormShort.astro";
import PortfolioGrid from "../components/PortfolioGrid.astro";
import { portfolioItems } from "../data/portfolio";
import { buildBreadcrumbSchema, buildServiceSchema } from "../lib/schema";

const breadcrumbs = [
  { name: "Главная", url: "/" },
  { name: "Гостиные", url: "/gostinye" }
];

const schema = [
  buildBreadcrumbSchema(breadcrumbs),
  buildServiceSchema({
    name: "Гостиные на заказ в Сочи",
    description:
      "Проектирование и изготовление гостиных на заказ в Сочи, Адлере и Красной Поляне.",
    url: "/gostinye"
  })
];

// Enrich content
const features = [
  'Модульные системы хранения',
  'Интегрированная подсветка фасадов',
  'Дизайнерская фурнитура и шпон'
];

const meta = {
  title: "Гостиные на заказ в Сочи",
  description: "Гостиные на заказ в Сочи: ТВ-зоны, системы хранения и стильные модули для отдыха.",
  canonical: "/gostinye"
};
---
<BaseLayout {...meta} schema={schema}>

  <!-- HERO -->
  <Hero
    title="Гостиные как отражение стиля"
    subtitle="Сценарии жизни"
    description="Мы создаем пространство, где архитектура мебели подчеркивает атмосферу вашего отдыха. ТВ-зоны, библиотеки и консольные системы в едином стиле."
    image="/images/media-zone-oak.jpg"
    height="large"
    overlay={true}
  >
    <div slot="actions" class="flex gap-4">
      <Button href="#lead">Обсудить ваш интерьер</Button>
    </div>
  </Hero>

  <!-- BREADCRUMBS -->
  <Section padding="none" class="pt-8 relative z-20">
    <Breadcrumbs items={breadcrumbs} />
  </Section>

  <!-- LEAD -->
  <Section id="lead" background="surface">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-center">
      <div class="reveal-up">
        <span class="text-accent text-xs font-bold tracking-[0.2em] uppercase block mb-4">Порядок</span>
        <h2 class="font-serif text-3xl md:text-5xl text-white mb-6">Гостиные под <br /> ваш ритм жизни</h2>
        <p class="text-lg text-muted mb-10">
          Мы проектируем мебель, которая гармонично вписывается в архитектуру вашего дома. Используем премиальные материалы для создания уникальных интерьеров.
        </p>
        
        <div class="space-y-6">
           {features.map(item => (
             <div class="flex items-center gap-4">
                <span class="w-8 h-[1px] bg-accent"></span>
                <span class="text-white font-medium uppercase text-sm tracking-widest">{item}</span>
             </div>
           ))}
        </div>
      </div>
      
      <div class="bg-surface-2 p-8 md:p-12 rounded-lg border border-white/10 reveal-up">
         <CTAFormShort title="Запросить смету проекта" />
      </div>
    </div>
  </Section>

  <!-- PORTFOLIO -->
  <Section id="portfolio">
    <div class="mb-16 reveal-up">
      <span class="text-accent text-xs font-bold tracking-[0.2em] uppercase block mb-4">Наши проекты</span>
      <h2 class="font-serif text-4xl md:text-5xl text-white">Реализованные проекты</h2>
    </div>
    <PortfolioGrid items={portfolioItems.slice(0, 3)} />
  </Section>

</BaseLayout>
