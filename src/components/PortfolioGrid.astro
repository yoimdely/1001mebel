---
interface Props {
  items: {
    title: string;
    image: string;
    category: string;
    area?: string;
  }[];
}

const { items } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-1">
  {items && items.map((project) => (
    <article class="group relative block aspect-[4/5] overflow-hidden bg-zinc-900">
      <div class="absolute inset-0 overflow-hidden">
        <img 
          src={project.image} 
          alt={project.title}
          class="w-full h-full object-cover transition-transform duration-[1.5s] ease-out group-hover:scale-105 opacity-90 group-hover:opacity-100"
          loading="lazy"
        />
      </div>
      <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-70 group-hover:opacity-90 transition-opacity duration-500 z-10"></div>

      <div class="absolute inset-x-0 bottom-0 p-8 z-20 flex flex-col justify-end transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
        <span class="text-accent text-[10px] md:text-xs font-bold tracking-[0.2em] uppercase mb-3 opacity-80 group-hover:opacity-100 transition-opacity duration-300">
          {project.category}{project.area ? ` • ${project.area}` : ""}
        </span>
        <h3 class="font-serif text-2xl md:text-3xl lg:text-4xl text-white leading-tight mb-4 group-hover:text-white transition-colors">
          {project.title}
        </h3>
        <div class="w-12 h-[1px] bg-accent group-hover:w-full transition-all duration-700 ease-in-out opacity-80"></div>
      </div>
    </article>
  ))}
</div>
