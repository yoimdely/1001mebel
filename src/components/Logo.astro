---
interface Props {
  variant?: "full" | "mark" | "square";
  class?: string;
  alt?: string;
}

const { variant = "full", class: className = "", alt = "1001 Мебель" } = Astro.props;

const src =
  variant === "full"
    ? "/images/logo%20with%20text.png"
    : variant === "mark"
      ? "/images/logo%20without%20text.png"
      : "/images/logo%202000x2000.png";
---
<span class:list={["logo", `logo--${variant}`, className]} aria-label={alt}>
  <img src={src} alt={alt} loading="eager" />
</span>

<style>
.logo {
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.logo img {
  display: block;
  width: 100%;
  height: auto;
}
.logo--full {
  width: clamp(140px, 12vw, 180px);
}
.logo--mark {
  width: 56px;
}
.logo--square {
  width: 64px;
}
</style>
