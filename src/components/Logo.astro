---
interface Props {
  variant?: "full" | "mark" | "square";
  class?: string;
  alt?: string;
}

const { variant = "full", class: className = "", alt = "1001 Мебель" } = Astro.props;

const src = "/images/logo-gold.png";
---
<span class:list={["logo", `logo--${variant}`, className]} aria-label={alt}>
  <img src={src} alt={alt} loading="eager" />
</span>

<style>
.logo {
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.logo img {
  display: block;
  width: 100%;
  height: auto;
}
.logo--full {
  width: clamp(144px, 11vw, 180px);
}
.logo--mark {
  width: clamp(108px, 8.2vw, 132px);
}
.logo--square {
  width: clamp(112px, 30vw, 146px);
}
</style>
