---
const services = [
  "Кухня", "Гардеробная", "Шкаф-купе", "Мебель в ванную", "Комплексная меблировка"
];
---

<form class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12" id="cta-form-long">
  
  <div class="space-y-8">
    <div class="group relative">
      <input 
        type="text" 
        id="l-name" 
        name="name" 
        placeholder=" "
        required
        class="peer w-full bg-transparent border-b border-white/20 py-4 text-white focus:outline-none focus:border-accent transition-colors duration-300 text-lg"
      />
      <label 
        for="l-name" 
        class="absolute left-0 top-4 text-zinc-500 text-base transition-all duration-300 pointer-events-none
               peer-focus:-top-5 peer-focus:text-xs peer-focus:text-accent
               peer-[:not(:placeholder-shown)]:-top-5 peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:text-zinc-400"
      >
        Ваше имя
      </label>
    </div>

    <div class="group relative">
      <input 
        type="tel" 
        id="l-phone" 
        name="phone" 
        placeholder=" "
        required
        class="peer w-full bg-transparent border-b border-white/20 py-4 text-white focus:outline-none focus:border-accent transition-colors duration-300 text-lg"
      />
      <label 
        for="l-phone" 
        class="absolute left-0 top-4 text-zinc-500 text-base transition-all duration-300 pointer-events-none
               peer-focus:-top-5 peer-focus:text-xs peer-focus:text-accent
               peer-[:not(:placeholder-shown)]:-top-5 peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:text-zinc-400"
      >
        Телефон
      </label>
    </div>

    <div class="group relative">
      <select 
        id="l-service" 
        name="service" 
        class="peer w-full bg-transparent border-b border-white/20 py-4 text-white focus:outline-none focus:border-accent transition-colors duration-300 appearance-none rounded-none text-lg cursor-pointer"
      >
        <option value="" disabled selected class="bg-surface text-zinc-500"></option>
        {services.map(s => <option value={s} class="bg-surface text-white">{s}</option>)}
      </select>
      <label 
        for="l-service" 
        class="absolute left-0 top-4 text-zinc-500 text-base transition-all duration-300 pointer-events-none
               peer-focus:-top-5 peer-focus:text-xs peer-focus:text-accent
               peer-[:not(:placeholder-shown)]:-top-5 peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:text-zinc-400"
      >
        Что вас интересует?
      </label>
      <div class="absolute right-0 top-5 pointer-events-none text-zinc-500">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
      </div>
    </div>
  </div>

  <div class="space-y-8 flex flex-col justify-between">
    <div class="group relative h-full">
      <textarea 
        id="l-message" 
        name="message" 
        placeholder=" "
        rows="4"
        class="peer w-full h-full bg-transparent border-b border-white/20 py-4 text-white focus:outline-none focus:border-accent transition-colors duration-300 resize-none text-lg"
      ></textarea>
      <label 
        for="l-message" 
        class="absolute left-0 top-4 text-zinc-500 text-base transition-all duration-300 pointer-events-none
               peer-focus:-top-5 peer-focus:text-xs peer-focus:text-accent
               peer-[:not(:placeholder-shown)]:-top-5 peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:text-zinc-400"
      >
        Комментарий (по желанию)
      </label>
    </div>

    <button 
      type="submit" 
      class="w-full md:w-auto relative group overflow-hidden bg-white text-black py-5 px-10 font-sans font-bold uppercase tracking-widest text-xs transition-all hover:bg-accent hover:text-black self-end"
    >
      <span class="relative z-10 flex items-center justify-center gap-3">
        Получить расчет
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:translate-x-1"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
      </span>
    </button>
  </div>
</form>
