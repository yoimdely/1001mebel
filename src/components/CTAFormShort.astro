---
interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "Обсудить проект", subtitle } = Astro.props;
---

<form class="flex flex-col gap-6 relative" id="cta-form-short">
  
  {title && (
    <div class="mb-2">
      <h3 class="font-serif text-2xl md:text-3xl text-white mb-2">{title}</h3>
      {subtitle && <p class="text-sm text-zinc-500">{subtitle}</p>}
    </div>
  )}

  <div class="space-y-6">
    <div class="group relative">
      <input 
        type="text" 
        id="name" 
        name="name" 
        placeholder=" "
        required
        class="peer w-full bg-transparent border-b border-white/20 py-3 text-white focus:outline-none focus:border-accent transition-colors duration-300"
      />
      <label 
        for="name" 
        class="absolute left-0 top-3 text-zinc-500 text-sm transition-all duration-300 pointer-events-none
               peer-focus:-top-4 peer-focus:text-xs peer-focus:text-accent
               peer-[:not(:placeholder-shown)]:-top-4 peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:text-zinc-400"
      >
        Ваше имя
      </label>
    </div>

    <div class="group relative">
      <input 
        type="tel" 
        id="phone" 
        name="phone" 
        placeholder=" "
        required
        class="peer w-full bg-transparent border-b border-white/20 py-3 text-white focus:outline-none focus:border-accent transition-colors duration-300"
      />
      <label 
        for="phone" 
        class="absolute left-0 top-3 text-zinc-500 text-sm transition-all duration-300 pointer-events-none
               peer-focus:-top-4 peer-focus:text-xs peer-focus:text-accent
               peer-[:not(:placeholder-shown)]:-top-4 peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:text-zinc-400"
      >
        Телефон
      </label>
    </div>
  </div>

  <div class="mt-4">
    <button 
      type="submit" 
      class="w-full relative group overflow-hidden bg-white text-black py-4 px-8 font-sans font-bold uppercase tracking-widest text-xs transition-all hover:bg-accent"
    >
      <span class="relative z-10 flex items-center justify-center gap-2">
        Отправить заявку
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:translate-x-1"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
      </span>
    </button>
    <p class="text-[10px] text-zinc-600 mt-4 text-center leading-relaxed">
      Нажимая кнопку, вы соглашаетесь с <a href="/privacy" class="underline hover:text-zinc-400">политикой конфиденциальности</a>
    </p>
  </div>
</form>
