---
// Simple hero for subpages (Breadcrumbs + Title)
import Breadcrumbs from "../Breadcrumbs.astro";

interface Props {
  title: string;
  breadcrumbs: { name: string; url: string }[];
  description?: string;
}

const { title, breadcrumbs, description } = Astro.props;
---

<section class="pt-32 pb-12 md:pt-40 md:pb-20">
  <div class="container">
    <div class="mb-8">
      <Breadcrumbs items={breadcrumbs} />
    </div>
    
    <h1 class="font-serif text-4xl md:text-6xl text-white mb-6">
      {title}
    </h1>
    
    {description && (
      <p class="text-lg md:text-xl text-muted max-w-3xl leading-relaxed">
        {description}
      </p>
    )}
  </div>
</section>
