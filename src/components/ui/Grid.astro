---
interface Props {
  columns?: 2 | 3 | 4;
  gap?: "small" | "medium" | "large";
  class?: string;
  items?: any[]; // optional array if you want to map children
}

const { 
  columns = 3, 
  gap = "medium", 
  class: className = "" 
} = Astro.props;

const colsClass = {
  2: "grid-cols-1 md:grid-cols-2",
  3: "grid-cols-1 md:grid-cols-3",
  4: "grid-cols-1 md:grid-cols-2 lg:grid-cols-4"
}[columns];

const gapClass = {
  small: "gap-4 md:gap-6",
  medium: "gap-8 md:gap-12",
  large: "gap-12 md:gap-16"
}[gap];
---

<div class={`grid ${colsClass} ${gapClass} ${className}`}>
  <slot />
</div>
