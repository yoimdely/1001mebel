---
interface Props {
  image: string;
  title: string;
  badge?: string;
  reversed?: boolean;
}

const { image, title, badge, reversed = false } = Astro.props;
---

<div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center ${reversed ? 'lg:flex-row-reverse' : ''}`}>
  
  <div class={`order-2 ${reversed ? 'lg:order-2' : 'lg:order-1'}`}>
    {badge && (
       <div class="inline-flex items-center gap-2 mb-6">
         <span class="h-[1px] w-8 bg-accent"></span>
         <span class="text-accent text-xs font-bold tracking-[0.2em] uppercase">{badge}</span>
       </div>
    )}
    
    <h2 class="font-serif text-3xl md:text-5xl text-white mb-6 leading-tight">
      {title}
    </h2>
    
    <div class="text-muted text-lg leading-relaxed space-y-6">
      <slot />
    </div>
  </div>

  <div class={`order-1 ${reversed ? 'lg:order-1' : 'lg:order-2'} relative group`}>
    <div class="aspect-square md:aspect-[4/3] rounded-sm overflow-hidden relative">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" 
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent opacity-60"></div>
    </div>
    
    <!-- Decorative border or offset element if needed -->
    <div class="absolute -z-10 -bottom-4 -right-4 w-full h-full border border-white/5 rounded-sm hidden lg:block"></div>
  </div>

</div>
