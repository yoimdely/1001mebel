---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  image?: string;
  height?: "full" | "auto" | "large";
  align?: "left" | "center";
}

const { 
  title, 
  subtitle, 
  description, 
  image, 
  height = "large", 
  align = "left",
} = Astro.props;

const heightClass =
  height === "full" ? "hero--full" : height === "auto" ? "hero--auto" : "hero--large";
const alignClass = align === "center" ? "hero--center" : "hero--left";
---

<section class={`hero-block ${heightClass} ${alignClass}`}>
  <div class="hero-bg"></div>
  <div class="container">
    <div class="hero-grid">
      <div class="hero-content">
        {subtitle && <span class="eyebrow">{subtitle}</span>}
        <h1 set:html={title} />
        {description && <p>{description}</p>}
        <div class="hero-actions">
          <slot name="actions" />
        </div>
      </div>

      {image && (
        <div class="hero-visual">
          <img src={image} alt="Проект мебели" loading="eager" />
          <div class="hero-visual__overlay"></div>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .hero-block {
    position: relative;
    padding-top: var(--space-12);
    padding-bottom: var(--space-12);
    overflow: hidden;
    background: var(--bg);
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(500px 320px at 20% 20%, rgba(214, 179, 106, 0.18), transparent 60%);
    pointer-events: none;
  }
  .hero--full { min-height: 100vh; }
  .hero--large { min-height: 70vh; }
  .hero--auto { min-height: auto; }

  .hero-grid {
    display: grid;
    gap: var(--space-10);
    align-items: center;
  }
  @media (min-width: 1024px) {
    .hero-grid { grid-template-columns: 1.1fr 0.9fr; }
  }
  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .hero-content h1 {
    margin: var(--space-5) 0 var(--space-6);
  }
  .hero-content p {
    margin-bottom: var(--space-6);
  }
  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
  }

  .hero-visual {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid rgba(214, 179, 106, 0.35);
    box-shadow: var(--shadow-gold);
  }
  .hero-visual img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 4 / 5;
  }
  .hero-visual__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(11, 11, 10, 0.55), transparent 45%);
  }

  .hero--center .hero-grid {
    grid-template-columns: 1fr;
  }
  .hero--center .hero-content {
    text-align: center;
    align-items: center;
  }
  .hero--center .hero-actions {
    justify-content: center;
  }

  @media (max-width: 768px) {
    .hero-block {
      padding-top: var(--space-10);
    }
  }
</style>
