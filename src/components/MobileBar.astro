---
import { site } from "../data/site";
---
<div class="mobile-bar">
  <a href={site.phoneLink} class="bar-item">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
    <span>Звонок</span>
  </a>
  <a href={site.whatsapp} class="bar-item primary" target="_blank" rel="noopener noreferrer">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
    <span>WhatsApp</span>
  </a>
  <a href={site.telegram} class="bar-item" target="_blank" rel="noopener noreferrer">
    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 5L3 12l7 2 2 7 4-6 5-10z"/><path d="M10 14l11-9"/></svg>
    <span>Telegram</span>
  </a>
</div>

<style>
  .mobile-bar {
    background: rgba(5, 5, 5, 0.85);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding: 10px 14px calc(10px + env(safe-area-inset-bottom, 12px));
    gap: 8px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .bar-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    background: rgba(255, 255, 255, 0.03);
    color: var(--muted);
    font-size: 8px;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.1em;
    flex: 1;
    height: 52px;
    border-radius: 12px;
    transition: all 0.3s var(--transition);
  }

  .bar-item.primary {
    background: var(--accent);
    color: #1a1405;
    flex: 1.5;
    box-shadow: 0 10px 20px rgba(229, 192, 123, 0.15);
  }

  .icon {
    font-size: 16px;
  }
</style>
