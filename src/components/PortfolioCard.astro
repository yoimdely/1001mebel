---
interface Props {
    img: string;
    title: string;
    tags?: string[];
    href: string;
    class?: string;
    style?: string;
}

const { img, title, tags = [], href, class: className, style } = Astro.props;
---
<a href={href} class:list={["card", className]} style={style}>
    <div class="card-image">
        <img src={img} alt={title} loading="lazy" width="400" height="500" />
    </div>
    <div class="card-content">
        <h3>{title}</h3>
        {tags.length > 0 && (
            <div class="card-tags">
                {tags.map(tag => <span class="tag">{tag}</span>)}
            </div>
        )}
    </div>
</a>
<style>
    .card {
        display: block;
        background-color: var(--surface);
        border-radius: var(--radius-md);
        overflow: hidden;
        text-decoration: none;
        color: var(--text);
        border: 1px solid rgba(214, 179, 106, 0.15);
        transition: transform var(--transition), border-color var(--transition), box-shadow var(--transition);
    }
    .card:hover {
        transform: translateY(-4px);
        border-color: rgba(214, 179, 106, 0.45);
        box-shadow: var(--shadow-gold);
    }
    .card-image {
        overflow: hidden;
    }
    .card-image img {
        width: 100%;
        height: auto;
        aspect-ratio: 4 / 5;
        object-fit: cover;
        transition: transform 0.6s var(--transition);
    }
    .card:hover .card-image img {
        transform: scale(1.05);
    }
    .card-content {
        padding: var(--space-6);
    }
    .card-content h3 {
        font-size: 1.35rem;
        margin-bottom: var(--space-3);
        font-family: var(--font-display);
        font-weight: 600;
    }
    .card-tags {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-2);
    }
    .tag {
        display: inline-block;
        padding: var(--space-1) var(--space-3);
        background-color: rgba(214, 179, 106, 0.12);
        color: var(--accent);
        border-radius: 999px;
        font-size: var(--font-size-small);
        font-weight: 500;
    }
</style>
